<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2F3A41">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read message"
            android:id="@+id/title"
            android:padding="10dip"
            android:textColor="#FFF"
            android:background="#2F3A41"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="From:"
        android:id="@+id/textView3"
        android:textSize="14dp"
        android:textAllCaps="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Tero Teekkari"
        android:id="@+id/textViewSender"
        android:textSize="14dp"
        android:textStyle="italic"/>

     <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:id="@+id/textView"
         android:layout_marginTop="15dp"
        android:textSize="14dp"
        android:textAllCaps="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Fix request"
        android:id="@+id/textViewTopic"
        android:textSize="14dp"
        android:textStyle="italic"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Message:"
        android:id="@+id/textView6"
        android:layout_marginTop="15dp"
        android:textSize="14dp"
        android:textAllCaps="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/scrollView">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please go fix this lamp."
            android:id="@+id/textViewMessageContents"
            android:textSize="14dp"/>
    </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_gravity="center_horizontal">

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="REPLY"
        android:background="@color/button_background"
        android:id="@+id/replyButton"
        android:layout_marginRight="20dp"
        android:minHeight="30dp"
        android:textSize="6pt"
        android:onClick="onReplyClick"
        android:textColor="@color/white_text"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:background="@android:color/holo_red_dark"
        android:id="@+id/deleteButton"
        android:minHeight="30dp"
        android:textSize="6pt"
        android:onClick="onDeleteClick"
        android:textColor="@color/white_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="#2F3A41"
        android:layout_gravity="bottom">
    </LinearLayout>

</LinearLayout>