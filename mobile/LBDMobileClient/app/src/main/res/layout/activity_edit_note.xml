<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fi.lbd.mobile.EditNoteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2F3A41"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:id="@+id/linearLayout">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit notes"
            android:id="@+id/textView2"
            android:padding="10dip"
            android:textColor="#FFF"
            android:background="#2F3A41"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/additional_notes"
        android:id="@+id/textView"
        android:textSize="14dp"
        android:textAllCaps="true"
        android:layout_below="@+id/linearLayout"
        android:layout_alignLeft="@+id/textViewTitle"
        android:layout_alignStart="@+id/textViewTitle"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Empty"
        android:id="@+id/textViewTitle"
        android:textSize="14dp"
        android:textStyle="italic"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp"
        android:singleLine="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/linearLayout2"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="ACCEPT"
            android:background="@color/button_background"
            android:id="@+id/acceptButton"
            android:layout_marginRight="20dp"
            android:minHeight="30dp"
            android:textSize="6pt"
            android:onClick="onAcceptClick"
            android:textColor="@color/white_text"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:background="@android:color/holo_red_dark"
            android:id="@+id/cancelButton"
            android:minHeight="30dp"
            android:textSize="6pt"
            android:onClick="onCancelClick"
            android:textColor="@color/white_text"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/navigation_bar_background"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout2">
    </LinearLayout>

</RelativeLayout>
